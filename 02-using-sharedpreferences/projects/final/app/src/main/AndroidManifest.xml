<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.raywenderlich.organizedsimplenotes"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <!-- Splash Activity -->
    <activity android:name="com.raywenderlich.organizedsimplenotes.SplashActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- Main Activity -->
    <activity android:name="com.raywenderlich.organizedsimplenotes.MainActivity" />
    <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts" />
  </application>

</manifest>