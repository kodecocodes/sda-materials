      android:title="@string/change_note_background_color"
      app:showAsAction="never" />
  <item android:id="@+id/filter_note_by_priority"
        android:title="Filter Note By Priority"
        android:icon="@drawable/ic_filter"
        app:showAsAction="ifRoom">
    <menu>
    <group android:checkableBehavior="all">
      <item android:id="@+id/priority_1"
            android:title="Priority 1" />
      <item android:id="@+id/priority_2"
            android:title="Priority 2" />
      <item android:id="@+id/priority_3"
            android:title="Priority 3" />

    </group>
